<h1>Listing divisions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Council</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @divisions.each do |division| %>
  <tr>
    <td><%= division.name %></td>
    <td><%= division.council.name %></td>
    <td><%= link_to 'Show', division, :class => 'btn primary' %></td>
    <td><%= link_to 'Edit', edit_division_path(division), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', division, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %></td>
  </tr>
<% end %>
</table>

