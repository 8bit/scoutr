<h1>Listing councils</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @councils.each do |council| %>
  <tr>
    <td><%= council.name %></td>
    <td><%= council.number %></td>
    <td><%= link_to 'Show', council, :class => 'btn primary' %></td>
    <td><%= link_to 'Edit', edit_council_path(council), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', council, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %></td>
  </tr>
<% end %>
</table>

