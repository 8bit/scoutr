<h1>Listing lodges</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Number</th>
    <th>Council</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lodges.each do |lodge| %>
  <tr>
    <td><%= lodge.name %></td>
    <td><%= lodge.number %></td>
    <td><%= lodge.council.name %></td>
    <td class="span2"><%= link_to 'Show', lodge, :class => 'btn' %></td>
    <td class="span2"><%= link_to 'Edit', edit_lodge_path(lodge), :class => 'btn' %></td>
    <td class="span2"><%= link_to 'Delete', lodge, confirm: 'Are you sure?', method: :delete, :class => 'btn danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Lodge', new_lodge_path, :class => 'btn large primary' %>
